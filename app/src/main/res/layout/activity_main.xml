<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.lhj.mytestlhj.MainActivity"
        >

    <com.lhj.lhjuilibrary.DropDownMenu
            android:id="@+id/dropDownMenu"
            app:ddmDividerColor="@color/gray_shallow"
            app:ddmMaskColor="@color/mask_color"
            app:ddmMenuBackgroundColor="@color/white"
            app:ddmMenuSelectedIcon="@mipmap/ic_img_up"
            app:ddmMenuTextSize="16sp"
            app:ddmMenuUnselectedIcon="@mipmap/ic_img_down"
            app:ddmTextSelectedColor="@color/toolbarColor"
            app:ddmTextUnselectedColor="@color/home_tab_color_title"
            app:ddmUnderlineColor="@color/toolbarColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

</android.support.constraint.ConstraintLayout>
